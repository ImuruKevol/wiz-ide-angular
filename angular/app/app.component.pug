.workspace
    .d-none
        #dummy-modal-click((click)="alert.cache()")

    .workspace-header.area-round
        .workspace-title
            img.m-0(src="assets/logo.png")
        
        .workspace-header-menu.row.align-items-center
            .col-auto
                span.status-indicator.status-indicator-animated.status-primary
                    span.status-indicator-circle
                    span.status-indicator-circle
                    span.status-indicator-circle

            .col(style="line-height: 1;")
                h2.page-title @wiz.title

            .col-auto.actions.if-desktop
                wiz-core-topmenu([event]="event")

    .workspace-body
        .workspace-leftmenu
            .d-block(*ngFor="let item of leftmenu.top")
                .btn((click)="leftmenu.toggle(item.id)", [ngClass]="leftmenu.mode == item.id ? 'active' : ''")
                    i(class="{{ item.icon }}")
                    .hover-area
                        .sidemenu-icon
                            i(class="{{ item.icon }}")
                        span {{ item.name }}
            .mt-auto
            .d-block(*ngFor="let item of leftmenu.bottom")
                .btn((click)="leftmenu.toggle(item.id)", [ngClass]="leftmenu.mode == item.id ? 'active' : ''")
                    i(class="{{ item.icon }}")
                    .hover-area
                        .sidemenu-icon
                            i(class="{{ item.icon }}")
                        span {{ item.name }}

        .workspace-leftapp.area-round(*ngIf="leftmenu.mode")
            wiz-config-leftmenu([event]="event", [menu]="leftmenu", [binding]="binding")

        .workspace-editor
            .editor-list
                .editor-body(*ngFor="let item of editor.data", [ngClass]="editor.activated && item.editor_id == editor.activated.editor_id ? 'active' : ''", (click)="editor.active(item)")
                    .editor-header 
                        .header-text
                            span {{item.title}}
                            small.ml-1(*ngIf="item.subtitle") ({{item.subtitle}})
                        .actions
                            .btn.btn-square.btn-sm.btn-primary.p-2((click)="editor.minify(item)")
                                i.fa-solid.fa-minus
                            .btn.btn-square.btn-sm.btn-primary.p-2((click)="editor.close(item)")
                                i.fa-solid.fa-xmark

                    .editor-selector(*ngIf="item.tabs.length > 1")
                        a.btn.btn-square.btn-sm.p-2(*ngFor="let tab of item.tabs; index as idx", (click)="editor.load(item, idx)", [ngClass]="idx == item.current ? 'btn-white' : 'btn-primary'") {{tab.name}}
                        
                    .editor-container
                        wiz-core-editor-app-info(*ngIf="item.tabs[item.current].mode == 'info.app'", [item]="item", [event]="event")

                        wiz-core-editor-route-info(*ngIf="item.tabs[item.current].mode == 'info.route'", [item]="item", [event]="event")
                        
                        .editor-monaco(*ngIf="item.tabs[item.current].mode == 'code'")
                            nu-monaco-editor([(ngModel)]="editor.files[item.tabs[item.current].path]", [options]="item.tabs[item.current].config", [height]="'100%'", (event)="init.editor(item, $event)")

            .editor-minified(*ngIf="editor.minified.length > 0")
                .minified-padding
                .minified-item(*ngFor="let item of editor.minified", (click)="editor.reopen(item)") 
                    span {{item.title}}

        .workspace-rightapp(*ngIf="rightmenu.mode")
            wiz-config-rightmenu([event]="event", [menu]="rightmenu", [binding]="binding")

        .workspace-rightmenu
            .d-block(*ngFor="let item of rightmenu.top")
                .btn((click)="rightmenu.toggle(item.id)", [ngClass]="rightmenu.mode == item.id ? 'active' : ''")
                    i(class="{{ item.icon }}")
                    .hover-area
                        span {{ item.name }}
                        .sidemenu-icon
                            i(class="{{ item.icon }}")
            .mt-auto
            .d-block(*ngFor="let item of rightmenu.bottom")
                .btn((click)="rightmenu.toggle(item.id)", [ngClass]="rightmenu.mode == item.id ? 'active' : ''")
                    i(class="{{ item.icon }}")
                    .hover-area
                        span {{ item.name }}
                        .sidemenu-icon
                            i(class="{{ item.icon }}")

    ng-keyboard-shortcuts([shortcuts]="shortcuts")
    ngx-loading([show]="loading.status")
