.side-container
    .side-heading
        h3.nowrap.m-0(style="max-width: 220px; overflow: hidden; text-overflow: ellipsis;")
            span NPM Packages
        
    .side-search.area-round
        input.form-control(type="text" placeholder="npm package name", [(ngModel)]="package.keyword", (keyup.enter)="package.install(package.keyword)")
        button.btn.btn-primary.ms-2((click)="package.install(package.keyword)") Install

    .side-body.area-round
        table.table.table-hover
            thead
                th.text-center Package
                th.text-center Version
                th.text-center.w-1
            tbody
                tr(*ngFor="let item of package.data")
                    ng-container(*ngIf="package.match(item.name)")
                        th {{item.name}}
                        td {{item.version}}
                        td.w-1.nowrap
                            button.btn.btn-sm.btn-dark((click)="package.install(package.keyword)")
                                i.fa-solid.fa-arrow-up
                            button.btn.btn-sm.btn-dark.ms-1(*ngIf="!package.required.includes(item.name)", (click)="package.uninstall(item.name)")
                                i.fa-solid.fa-trash

    ngx-loading([show]="loading")