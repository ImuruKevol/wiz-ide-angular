.side-container
    .side-heading
        h3.nowrap.m-0(style="max-width: 220px; overflow: hidden; text-overflow: ellipsis;")
            span Preview

    .side-search
        input.form-control.form-control-sm(type="text" placeholder="/main", [(ngModel)]="iframe.url", (keyup.enter)="iframe.move(iframe.url)")
        button.btn.btn-sm.btn-primary.ms-1((click)="iframe.move(iframe.url)")
            i.fa-solid.fa-arrow-right

    .side-body.area-round
        iframe([src]="iframe.urlSafe")

    ngx-loading([show]="loading")